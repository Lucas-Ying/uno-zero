<header class="panel-cover {{#if post}}panel-cover--collapsed{{/if}}" {{#if @blog.cover}}style="background-image: url({{@blog.cover}})"{{/if}}>
  <div class="panel-main">

    <div class="panel-main__inner panel-inverted">
    <div class="panel-main__content">

        {{#if @blog.logo}}
        <a href="{{@blog.url}}" title="Go to {{@blog.title}} HomePage"><img src="{{@blog.logo}}" width="80" alt="{{@blog.title}} logo" class="panel-cover__logo logo" /></a>
        {{/if}}
        <h1 class="panel-cover__title panel-title"><a href="{{@blog.url}}" id="web-title" title="Go to {{@blog.title}} HomePage">{{@blog.title}}</a></h1>
        <span class="panel-cover__subtitle panel-subtitle">Work Hard, Play Hard</span>
        <hr class="panel-cover__divider" />
        <p class="panel-cover__description">{{@blog.description}}</p>
        <hr class="panel-cover__divider panel-cover__divider--secondary" />

        <div class="navigation-wrapper">
          <div>
          <nav class="cover-navigation cover-navigation--primary">
            <ul class="navigation">
              <li class="navigation__item"><a title="Visit Posts" class="blog-button">Posts</a></li>
              <li class="navigation__item"><a href="http://lucasgallery.com" target="_blank" title="My Portfolios">Gallery</a></li>
              <li class="navigation__item"><a href="/public/CV_LucasYing.pdf" title="About Me">CV</a></li>
            </ul>
          </nav>
          </div>
          <div>
          {{> social-cover}}
          </div>
        </div>

      </div>

    </div>

    <div class="panel-cover--overlay cover-purple"></div>
  </div>
</header>